<h1>New User Form</h1>
<%=form_for @user do |f|%>
<p>
<%= f.label :name, "Your name:" %>
<%= f.text_field :name %>
</p>

<p>
<%= f.label :password, "Create a password:"%>
<%= f.password_field :password %>
</p>
<p>
<%= f.label :tickets, "How many tickets do you want?"%>
<%= f.text_field :tickets %>
</p>
<p>
<%= f.label :happiness, "How happy are you? (1-5 scale)" %>
<%= f.text_field :happiness %>
</p>
<p>
<%= f.label :nausea, "How nauseous are you? (1-5 scale)" %>
<%= f.text_field :nausea %>
</p>
<p>
<%= f.label :height, "Height (in inches)" %>
<%= f.text_field :height %>
</p>
<p>
<%= f.label :admin, "Are you an admin? Check this box if you are." %>
<%= f.check_box :admin %>
</p>

<%= f.submit 'Create User'%>
<%end%>